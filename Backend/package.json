{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "gateway": "npm start --prefix ApiGateways",
    "dev:user": "nodemon --watch UserService/src --exec ts-node -r tsconfig-paths/register UserService/src/index.ts",
    "dev:product": "nodemon --watch ProductService/src --exec ts-node -r tsconfig-paths/register ProductService/src/index.ts",
    "dev:review": "nodemon --watch ReviewService/src --exec ts-node -r tsconfig-paths/register ReviewService/src/index.ts",
    "dev:cart": "nodemon --watch CartService/src --exec ts-node -r tsconfig-paths/register CartService/src/index.ts",
    "dev:order": "nodemon --watch OrderService/src --exec ts-node -r tsconfig-paths/register OrderService/src/index.ts",
    "client": "npm run dev --prefix ../frontend",
    "dev": "concurrently --kill-others-on-fail \"npm run gateway\" \"npm run dev:user\" \"npm run dev:product\" \"npm run dev:review\" \"npm run dev:cart\" \"npm run dev:order\" \"npm run client\"",
    "build": "npm install && npm install --prefix ../frontend && npm run build --prefix ../frontend",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/amqplib": "^0.10.7",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/http-proxy-middleware": "^0.19.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.2.0",
    "@types/nodemailer": "^6.4.17",
    "@types/validator": "^13.15.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "amqplib": "^0.10.8",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.7.0",
    "concurrently": "^9.2.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "4.18.2",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "http-proxy-middleware": "^3.0.5",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "mongoose": "^8.17.1",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.5",
    "nodemon": "^3.1.10",
    "validator": "^13.15.15"
  }
}
